@model IEnumerable<WebProjesi.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--BlogContorllerde listelenen kayıtları buraya getirmek için üst kısmda işlem yapmamız gerekmektedir.Bunlar tek kayıt ve çift kayıt olarak değişir;-->
<!--Tek kayıt getirecek isek model WebProjesi.Models.Model.Blog(modelin başında ki işareti unutma)-->
<!--Birden fazla kayıt getirecek isek yukarıda yazdığımız gibi ya list şeklinde ya da ıenumarable şeklinde getirmeliyiz.-->
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            }
        );
    });
</script>
<h2>Blog Kayıtları</h2>
<a class="btn btn-default" href="/Blog/Create">Yeni Blog Ekle</a>

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>ResimURL</th>
            <th>işlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogId</td>
                <td>@item.Baslik</td>
                <td>@item.KategoriId</td>
                <td><img src="@item.ResimURL" width="100" height="100"</td>
                <td><a href="/Blog/Edit/@item.BlogId">Güncelle</a> | <a href="/Blog/Delete/@item.BlogId">Sil</a></td>
            </tr>

        }

    </tbody>
</table>
