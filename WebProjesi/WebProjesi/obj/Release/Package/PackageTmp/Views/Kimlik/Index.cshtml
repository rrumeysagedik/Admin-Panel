@model IEnumerable<WebProjesi.Models.Model.Kimlik>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<p>
    <a href="/Kimlik/Edit/1">Yeni Ekle## </a>
    @Html.ActionLink("Yeni Ekle", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KeyWords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogoURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unvan)
        </th>
        <th>İşlemler</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KeyWords)
        </td>
        <td>
            @Html.Raw(item.Description)
        </td>
        <td>
            <img class=" img-responsive" src="@item.LogoURL" width="300" height="200" /> <!-- img-responsive sayfanın biz küçülttüğümüzde küçülmesini biz büyüttüğümüzde büyümesini sağlar-->
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unvan)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.KimlikId }) 
           
        </td>
    </tr>
}

</table>
